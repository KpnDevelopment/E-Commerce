<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-primary ml-auto">Add Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">name</th>
          <th scope="col">category</th>
          <th scope="col">decription</th>
          <th scope="col">price</th>
          <th scope="col">image</th>

        </tr>
      </thead>
      <tbody>
        {{#each products}}

        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>{{this.price}}</td>
          <td><img style="width: 5rem; height: 5rem;" src="/product-images/{{this._id}}.jpg" alt="no"></td>

          <td><a href="/admin/edit-product{{this._id}}" class="btn btn-primary">Edit</a></td>
          <td><a href="/admin/delete-product{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure to delete {{this.Name}} ?')">Delete</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>