<section id="departments" class="container department mt-5" data-aos="fade-up">
  <div class="section-title">
  </div>
  <!-- Card deck -->
  <div class="row">
    {{#each products}}
    <!-- Card -->
    <div class="col-md-3 p-3 ">
      <div class="card mb-4 p-3" style="width: 17rem; height: 28rem;">
        <!--Card image-->
        <div class="view overlay">
          <img style="height: 12rem; padding: 2px; " class="card-img-top cardimage"
            src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
          <a href="#">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>

        <!--Card content-->
        <div class="card-body">
          <!--Title-->
          <h4 class="card-title">{{this.Name}}</h4>
          <!--Text-->
          <p class="card-text">
            {{this.Description}}
          </p>
          <p class="card-text">
            {{this.price}}
          </p>
          <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
          <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</section>